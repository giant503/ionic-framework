{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  },
  "include": [
    "dist/demos/**/entry.ts",
    "dist/demos/**/AppModule.ts"
  ]
}